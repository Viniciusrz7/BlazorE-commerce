@page "/Cadastrar"
<div class="w-full h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-xs bg-white rounded-lg shadow-lg p-5 flex flex-col items-center justify-center">
        <h2 class="text-center text-2xl font-bold mb-5">Registro</h2>

        <div class="mb-4">
            <label class="block text-gray-700" for="username">Novo usuário</label>
            <input class="border-b-2 border-indigo-500 outline-none focus:bg-gray-300 w-full" id="username"
             />
        </div>
        <div class="mb-4">
            <label class="block text-gray-700" for="password">Nova senha</label>
            <input class="border-b-2 border-indigo-500 outline-none focus:bg-gray-300 w-full" id="password"
                type="password"/>
        </div>
        <button class="w-full bg-indigo-500 text-white py-2 rounded hover:bg-indigo-600 cursor-pointer" type="submit">Registrar</button>
    </div>
</div>