@page "/ConfirmarCodigo"

<div class="w-full h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-xs bg-white rounded-lg shadow-lg p-5 flex flex-col items-center justify-center">
        <h2 class="text-center text-2xl font-bold mb-5">Confirme o Código</h2>

        <form class="w-full">
            <div class="mb-4">
                <label class="block text-gray-700" for="codigo">Código</label>
                <input class="border-b-2 border-indigo-500 outline-none focus:bg-gray-300 w-full" 
                       type="text" id="codigo" placeholder="Digite o código recebido">
            </div>
            <button class="w-full bg-indigo-500 text-white py-2 rounded hover:bg-indigo-600" type="submit">
                Verificar
            </button>
        </form>

        <footer class="mt-5 text-center w-full">
            <a class="text-sm text-indigo-500 hover:underline" href="/RecuperarSenha">Reenviar código</a>
        </footer>
    </div>
    <BlazorE_commerce.Componentes.Voltarpaginainicial/>
</div>
